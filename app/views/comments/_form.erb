<% form_for :comment, :url => chapter_comments_path(@chapter) do |f| %>
<p>
	<label	for="comment_name">Your Name</label>
	<%= f.text_field :name %>
</p>
<p>
	<label	for="comment_email">Your Email</label>
	<%= f.text_field :email %>
</p>
<p>
	<label	for="comment_body">Comment</label>
	<%= f.text_area :body %>
</p>
<p><%= submit_tag "Add Comment" %></p>
<% end %>
